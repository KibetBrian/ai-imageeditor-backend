generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  userId  String @default(uuid()) @unique
  name    String
  email   String @unique
  credits Int    @default(10)
}

model images {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String
  userId    String
  createdAt DateTime
}
